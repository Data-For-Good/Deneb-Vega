{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Annual Surface Temperature Change (Animated Scatter Plot)",
  "usermeta": {
    "Author": "Andrzej Leszkiewicz",
    "License": "CC BY 4.0 (Share and Adapt with Attribution)",
    "Github": "https://github.com/avatorl/Deneb-Vega/"
  },
  "width": 150,
  "height": 100,
  "autosize": "pad",
  "config": {"background": "#FFFFFF", "group": {"fill": "#FFFFFF"}},
  "signals": [
    {"name": "titleColor", "value": "#555555"},
    {"name": "labelColor", "value": "gray"},
    {"name": "subtitleStrokeColor", "value": "#AAAAAA"},
    {"name": "mapStrokeColor", "value": "#CCCCCC"},
    {"name": "mapNoDataFillColor", "value": "EEEEEE"},
    {"name": "labelFontSizeMajor", "value": "20"},
    {"name": "labelFontSizeMinor", "value": "14"},
    {"name": "gridColumns", "value": 5},
    {"name": "gridPadding", "value": 0}
  ],
  "data": [
    {
      "name": "data-all-years",
      "url": "https://raw.githubusercontent.com/avatorl/Deneb-Vega/main/warming-heatmap/temperature-change-country.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    },
    {
      "name": "data-global",
      "url": "https://raw.githubusercontent.com/avatorl/Deneb-Vega/main/warming-stripe/global-temp.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","},
      "transform": [{"type": "filter", "expr": "datum.year>=1961"}]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "data-all-years", "field": "latitude"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "data-all-years", "field": "temp"},
      "range": "height"
    },
    {
      "name": "colorHawkins",
      "type": "linear",
      "range": {
        "scheme": [
          "#67000D",
          "#A50F15",
          "#CB181D",
          "#EF3B2C",
          "#FB6A4A",
          "#FC9272",
          "#FCBBA1",
          "#FEE0D2",
          "#FFFFFF",
          "#DEEBF7",
          "#C6DBEF",
          "#9ECAE1",
          "#6BAED6",
          "#4292C6",
          "#2171B5",
          "#08519C",
          "#08306B"
        ]
      },
      "domain": {"data": "data-all-years", "field": "temp"},
      "reverse": true,
      "domainMid": 0
    }
  ],
  "legends": [],
  "axes": [],
  "title": {
    "anchor": "start",
    "font": {"value": "Tahoma"},
    "fontSize": {"value": 18},
    "fontWeight": "bold",
    "encode": {
      "title": {
        "update": {
          "text": {
            "signal": "'Annual Surface Temperature Change (compared to 1951-1980 average)'"
          },
          "fill": {"signal": "titleColor"}
        }
      }
    }
  },
  "marks": [
    {
      "type": "group",
      "layout": {
        "align": "all",
        "bounds": "full",
        "columns": {"signal": "gridColumns"},
        "padding": 10
      },
      "marks": [
        {
          "type": "group",
          "from": {
            "facet": {
              "name": "series",
              "data": "data-all-years",
              "groupby": "year"
            }
          },
          "title": {
            "text": {"signal": "data('series')[0]['year']"},
            "color": {
              "scale": "colorHawkins",
              "signal": "data('data-global')[data('series')[0]['year']-1961]['temp']"
            },
            "fontSize": 30,
            "dy": 25,
            "encode": {
              "title": {
                "update": {
                  "stroke": {"value": "#CCCCCC"},
                  "strokeWidth": {"value": "0.8"}
                }
              }
            }
          },
          "marks": [
            {
              "name": "points",
              "type": "symbol",
              "from": {"data": "series"},
              "encode": {
                "enter": {
                  "zindex": {"value": 1},
                  "tooltip": {"signal": "datum.country+', '+datum.year"},
                  "x": {"scale": "x", "field": "latitude"},
                  "y": {"scale": "y", "field": "temp"},
                  "stroke": {"scale": "colorHawkins", "field": "temp"},
                  "fill": {"scale": "colorHawkins", "field": "temp"},
                  "strokeOpacity": {"signal": "1"},
                  "strokeWidth": {"signal": "0.3"},
                  "fillOpacity": {"signal": "1"},
                  "size": {"signal": "10"}
                },
                "update": {}
              }
            }
          ]
        }
      ]
    }
  ]
}
