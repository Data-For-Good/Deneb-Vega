{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "",
  "usermeta": {
    "Author": "Andrzej Leszkiewicz",
    "License": "CC BY 4.0 (Share and Adapt with Attribution)",
    "Github": "https://github.com/avatorl/Deneb-Vega/",
    "Original Idea Author": "Nicholas Rougeux",
    "Original Idea URL": "https://www.c82.net/offthestaff/"
  },
  "width": 850,
  "height": 850,
  "padding": 10,
  "autosize": "pad",
  "background": "black",
  "data": [
    {
      "name": "dataset-csv",
      "url": "https://raw.githubusercontent.com/avatorl/Deneb-Vega/main/music-to-dataviz/music-to-dataviz.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    },
    {
      "name": "dataset",
      "source": "dataset-csv",
      "transform": [{"type": "collect", "sort": {"field": "angle"}}]
    },
    {
      "name": "selected",
      "on": [
        {"trigger": "clear", "remove": true},
        {"trigger": "!shift", "remove": true},
        {"trigger": "!shift && clicked", "insert": "clicked"},
        {"trigger": "shift && clicked", "toggle": "clicked"}
      ]
    }
  ],
  "signals": [
    {"name": "radius", "update": "475"},
    {
      "name": "clear",
      "value": true,
      "on": [
        {"events": "mouseup[!event.item]", "update": "true", "force": true}
      ]
    },
    {
      "name": "shift",
      "value": false,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "event.shiftKey",
          "force": true
        }
      ]
    },
    {
      "name": "clicked",
      "value": null,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "{value: datum.value}",
          "force": true
        }
      ]
    },
    {
      "name": "brush",
      "value": 0,
      "on": [
        {"events": {"signal": "clear"}, "update": "clear ? [0, 0] : brush"},
        {"events": "@xaxis:mousedown", "update": "[x(), x()]"},
        {
          "events": "[@xaxis:mousedown, window:mouseup] > window:mousemove!",
          "update": "[brush[0], clamp(x(), 0, width)]"
        },
        {
          "events": {"signal": "delta"},
          "update": "clampRange([anchor[0] + delta, anchor[1] + delta], 0, width)"
        }
      ]
    },
    {
      "name": "anchor",
      "value": null,
      "on": [{"events": "@brush:mousedown", "update": "slice(brush)"}]
    },
    {
      "name": "xdown",
      "value": 0,
      "on": [{"events": "@brush:mousedown", "update": "x()"}]
    },
    {
      "name": "delta",
      "value": 0,
      "on": [
        {
          "events": "[@brush:mousedown, window:mouseup] > window:mousemove!",
          "update": "x() - xdown"
        }
      ]
    },
    {
      "name": "domain",
      "on": [
        {
          "events": {"signal": "brush"},
          "update": "span(brush) ? invert('x', brush) : null"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "dataset", "field": "part"},
      "range": ["green", "yellow", "orange", "red", "blue"]
    }
  ],
  "title": {
    "text": "Piano Quintet No. 2 in c Minor Op. 115 - Gabriel Faur√©",
    "color": "white",
    "anchor": "start",
    "fontSize": 24
  },
  "axes": [],
  "legends": [
    {
      "stroke": "color",
      "fill": "color",
      "title": "Instrument",
      "titleFontSize": 24,
      "titleColor": "white",
      "titleOpacity": 0.7,
      "labelFontSize": 20,
      "labelColor": "white",
      "labelOpacity": 0.7,
      "offset": 5,
      "padding": 5,
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "enter": {
            "strokeWidth": {"value": 1},
            "strokeOpacity": {"value": 0.8},
            "fillOpacity": {"value": 0.4},
            "size": {"value": 100}
          },
          "update": {
            "fill": {"value": "transparent"},
            "strokeWidth": {"value": 2},
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 0.7
              },
              {"value": 0.15}
            ],
            "size": {"value": 64}
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 1
              },
              {"value": 0.25}
            ]
          }
        }
      }
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "dataset"},
      "encode": {
        "enter": {
          "x": {"signal": "radius + radius*datum['dx']"},
          "y": {"signal": "radius + radius*datum['dy']"},
          "size": {"signal": "pow(datum['duration'],0.999)*10"},
          "shape": {"value": "circle"},
          "strokeWidth": {"value": 0.5},
          "tooltip": {
            "signal": "datum.part+' '+datum.stepname+datum.octave+' alter '+datum.alter+' duration '+datum.duration"
          }
        },
        "update": {
          "stroke": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "scale": "color",
              "field": "part"
            },
            {"value": "#CCCCCC"}
          ],
          "fill": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "scale": "color",
              "field": "part"
            },
            {"value": "#CCCCCC"}
          ],
          "strokeOpacity": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "signal": "0.5"
            },
            {"signal": "0.25"}
          ],
          "fillOpacity": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.part))",
              "signal": "0.2"
            },
            {"signal": "0.05"}
          ]
        }
      }
    }
  ],
  "config": {}
}
