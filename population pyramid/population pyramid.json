{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Population Pyramid",
  "usermeta": {
    "Author": "Andrzej Leszkiewicz",
    "License": "CC BY 4.0 (Share and Adapt with Attribution)",
    "Github": "https://github.com/avatorl/Deneb-Vega/",
    "Original Idea Author": "Jorge Camoes",
    "Original Idea URL": ""
  },
  "width": 1000,
  "height": 800,
  "padding": 5,
  "config": {"background": "black"},
  "signals": [],
  "data": [
    {
      "name": "dataset-csv",
      "url": "https://raw.githubusercontent.com/avatorl/Deneb-Vega/main/population%20pyramid/Qatar1950-2100Population.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    },
    {"name": "dataset", "source": "dataset-csv"}
  ],
  "scales": [
    {
      "name": "scaleY",
      "type": "point",
      "range": "height",
      "domain": {"data": "dataset", "field": "AgeGrp"},
      "reverse": true
    },
    {
      "name": "scaleX",
      "type": "linear",
      "range": "width",
      "domain": [
        {"signal": "-data('dataset')[0]['Max']"},
        {"signal": "data('dataset')[0]['Max']"}
      ]
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": {"scheme": "oranges"},
      "domain": {"data": "dataset", "field": "Year"}
    }
  ],
  "axes": [
    {
      "orient": "left",
      "scale": "scaleY",
      "labels": true,
      "labelColor": "orange",
      "tickCount": 0
    },
    {
      "orient": "bottom",
      "scale": "scaleX",
      "labels": true,
      "labelColor": "orange",
      "tickCount": 10
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {"name": "series", "data": "dataset", "groupby": "Year"}
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "scaleX", "signal": "datum.Female"},
              "y": {"scale": "scaleY", "field": "AgeGrp"},
              "stroke": {"scale": "color", "field": "Year"},
              "strokeWidth": {"value": 0.5}
            },
            "update": {
              "interpolate": {"signal": "'linear'"},
              "strokeOpacity": {"value": 1}
            },
            "hover": {"strokeOpacity": {"value": 0.5}}
          }
        },
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "scaleX", "signal": "-datum.Male"},
              "y": {"scale": "scaleY", "field": "AgeGrp"},
              "stroke": {"scale": "color", "field": "Year"},
              "strokeWidth": {"value": 0.5}
            },
            "update": {
              "interpolate": {"signal": "'linear'"},
              "strokeOpacity": {"value": 1}
            },
            "hover": {"strokeOpacity": {"value": 0.5}}
          }
        }
      ]
    }
  ]
}
