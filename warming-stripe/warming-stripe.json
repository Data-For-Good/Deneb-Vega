{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Global Temperature)",
  "usermeta": {
    "Author": "Andrzej Leszkiewicz",
    "License": "CC BY 4.0 (Share and Adapt with Attribution)",
    "Github": "https://github.com/avatorl/Deneb-Vega/"
  },
  "background": "white",
  "width": 650,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "config": {},
  "signals": [],
  "data": [
    {
      "name": "dataset-csv",
      "url": "https://raw.githubusercontent.com/avatorl/Deneb-Vega/main/warming-stripe/global-temp.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    },
    {"name": "dataset", "source": "dataset-csv"}
  ],
  "scales": [
    {
      "name": "scaleX",
      "type": "linear",
      "domain": {"data": "dataset", "field": "year"},
      "range": [0, {"signal": "width"}],
      "zero": false
    },
    {
      "name": "scaleY",
      "type": "point",
      "domain": [1],
      "range": [0, {"signal": "height"}]
    },
    {
      "name": "color",
      "type": "linear",
      "range": {"scheme": "redblue"},
      "domain": {"data": "dataset", "field": "temp"},
      "reverse": true,
      "domainMid": 0
    }
  ],
  "title": {
    "text": {
      "signal": "'Global Temperature in 1880-2021 (compared to 1951-1980 average)'"
    },
    "anchor": "start",
    "font": {"value": "Tahoma"},
    "fontSize": {"value": 16},
    "fontWeight": "lighter",
    "dy": 0
  },
  "axes": [
    {
      "scale": "scaleX",
      "orient": "bottom",
      "domain": false,
      "tickCount": {"signal": "5"},
      "labelFontSize": {"signal": "0"},
      "labelColor": "gray",
      "format": ".4",
      "zindex": 0,
      "encode": {
        "labels": {
          "update": {
            "fontSize": {
              "signal": "(datum.value==1900||datum.value==2000)?20:14"
            }
          }
        }
      }
    },
    {
      "scale": "scaleX",
      "orient": "top",
      "domain": true,
      "tickCount": {"signal": "200"},
      "labelFontSize": {"signal": "0"},
      "labelColor": "gray",
      "format": ".4",
      "zindex": 0,
      "encode": {
        "ticks": {
          "update": {
            "y": {"value": -5},
            "y2": {"value": 0},
            "stroke": {"value": "gray"},
            "strokeWidth": {
              "signal": "(datum.value==1951||datum.value==1980)?1:0"
            }
          }
        },
        "labels": {
          "update": {
            "fill": {"value": "gray"},
            "fontSize": {
              "signal": "(datum.value==1951||datum.value==1980)?14:0"
            }
          }
        },
        "domain": {
          "update": {
            "x": {"scale": "scaleX", "value": 1951},
            "x2": {"scale": "scaleX", "value": 1980},
            "stroke": {"value": "red"},
            "strokeWidth": {"signal": "0.5"}
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "°C",
      "titleColor": "gray",
      "tickCount": 5,
      "tickMinStep": 0.2,
      "padding": 20,
      "orient": "none",
      "legendX": {"signal": "width+40"},
      "legendY": -40,
      "encode": {
        "title": {"update": {"fontSize": {"value": 14}}},
        "labels": {
          "update": {
            "dx": {"value": 3},
            "fontSize": {"value": 12},
            "fill": {"value": "gray"},
            "text": {"signal": "(datum.value>0?'+':'')+datum.label"}
          }
        },
        "symbols": {"update": {"stroke": {"value": "transparent"}}},
        "legend": {"update": {}}
      }
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["tick"],
      "from": {"data": "dataset"},
      "encode": {
        "update": {
          "opacity": {"value": 1},
          "fill": {"scale": "color", "field": "temp"},
          "xc": {"scale": "scaleX", "field": "year"},
          "yc": {"scale": "scaleY", "value": 1},
          "height": {"signal": "height*0.95"},
          "width": {"signal": "4"},
          "tooltip": {"signal": "datum.year+': '+datum.temp+'°C'"}
        }
      }
    }
  ]
}
