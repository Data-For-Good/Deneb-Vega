{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Reproduction of the Bamboo chart (initially designed by Jorge Camoes)",
  "usermeta": {
    "Author": "Andrzej Leszkiewicz",
    "License": "CC BY 4.0 (Share and Adapt with Attribution)",
    "Github": "https://github.com/avatorl/Deneb-Vega/",
    "Original Idea Author": "Jorge Cam√µes",
    "Original Idea URL": "https://excelcharts.com/bamboo-charts-people-at-risk-of-poverty-or-social-exclusion/"
  },
  "background": "white",
  "width": 800,
  "height": 30,
  "padding": 5,
  "autosize": "pad",
  "config": {},
  "signals": [
    {"name": "gridColumns", "value": 1},
    {"name": "lineColor", "value": "#AAAAAA"},
    {"name": "lineStrokeWidth", "value": "0.3"},
    {"name": "lineSelectedStrokeWidth", "value": "2"},
    {
      "name": "country1",
      "value": "Norway",
      "bind": {
        "input": "select",
        "options": [
          "Belgium",
          "Bulgaria",
          "Czech_Republic",
          "Denmark",
          "Germany",
          "Estonia",
          "Ireland",
          "Greece",
          "Spain",
          "France",
          "Italy",
          "Cyprus",
          "Latvia",
          "Lithuania",
          "Luxembourg",
          "Hungary",
          "Malta",
          "Netherlands",
          "Austria",
          "Poland",
          "Portugal",
          "Romania",
          "Slovenia",
          "Slovakia",
          "Finland",
          "Sweden",
          "United_Kingdom",
          "Iceland",
          "Norway",
          "Switzerland",
          "Croatia"
        ]
      }
    },
    {
      "name": "country2",
      "value": "Poland",
      "bind": {
        "input": "select",
        "options": [
          "Belgium",
          "Bulgaria",
          "Czech_Republic",
          "Denmark",
          "Germany",
          "Estonia",
          "Ireland",
          "Greece",
          "Spain",
          "France",
          "Italy",
          "Cyprus",
          "Latvia",
          "Lithuania",
          "Luxembourg",
          "Hungary",
          "Malta",
          "Netherlands",
          "Austria",
          "Poland",
          "Portugal",
          "Romania",
          "Slovenia",
          "Slovakia",
          "Finland",
          "Sweden",
          "United_Kingdom",
          "Iceland",
          "Norway",
          "Switzerland",
          "Croatia"
        ]
      }
    },
    {"name": "selected1Color", "value": "#377eb8"},
    {"name": "selected2Color", "value": "#e41a1c"}
  ],
  "data": [
    {
      "name": "dataset-csv",
      "url": "https://raw.githubusercontent.com/avatorl/Deneb-Vega/main/bamboo-chart/risk-poverty-dataset-full.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    },
    {"name": "dataset", "source": "dataset-csv"},
    {"name": "legend", "values": ["blue", "red"]}
  ],
  "scales": [
    {
      "name": "scaleX",
      "type": "linear",
      "domain": {"data": "dataset-csv", "field": "Value"},
      "range": [0, {"signal": "width"}],
      "zero": false
    },
    {
      "name": "scaleYTotal",
      "type": "point",
      "domain": [1],
      "range": [0, {"signal": "height"}]
    },
    {
      "name": "scaleYBranches",
      "type": "point",
      "domain": [1, 2],
      "range": [0, {"signal": "height"}]
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": ["#377eb8", "#e41a1c"],
      "domain": {"data": "legend", "field": "data"}
    }
  ],
  "title": {
    "text": {"signal": "'People at risk of poverty or social exclusion'"},
    "dy": -10,
    "anchor": "start",
    "font": {"value": "Tahoma"},
    "fontSize": {"value": 16},
    "fontWeight": "lighter"
  },
  "axes": [
    {
      "scale": "scaleX",
      "orient": "top",
      "domain": false,
      "tickCount": {"signal": ""},
      "labelFontSize": {"signal": "10"},
      "labelBaseline": "middle",
      "labelPadding": 5,
      "format": ".3",
      "labels": true,
      "title": "%",
      "titleAnchor": "start",
      "titlePadding": -5
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "orient": "bottom",
      "padding": 0,
      "type": "symbol",
      "symbolType": "stroke",
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "update": {
            "angle": {"value": 90},
            "strokeWidth": {"value": 3},
            "opacity": {"value": 1},
            "size": {"value": 128}
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "update": {
            "text": {"signal": "datum.label=='blue'?country1:country2"},
            "opacity": {"value": 1}
          }
        }
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "layout": {
        "align": "all",
        "bounds": "full",
        "columns": {"signal": "gridColumns"},
        "padding": -10
      },
      "marks": [
        {
          "type": "group",
          "from": {
            "facet": {"name": "series", "data": "dataset", "groupby": "Metric"}
          },
          "title": {
            "text": {"signal": "data('series')[0]['Metric']"},
            "align": "left",
            "color": {"value": "black"},
            "fontSize": 12,
            "fontWeight": "lighter",
            "anchor": "start",
            "dy": 25,
            "dx": -100
          },
          "axes": [
            {
              "scale": "scaleX",
              "orient": "top",
              "domain": true,
              "ticks": false,
              "labels": false,
              "domainWidth": {"signal": "data('series')[0]['New Group']*0.3"},
              "domainColor": "red"
            }
          ],
          "marks": [
            {
              "type": "group",
              "from": {
                "facet": {
                  "name": "countrySeries",
                  "data": "series",
                  "groupby": "Country"
                }
              },
              "marks": [
                {
                  "name": "line",
                  "type": "line",
                  "interactive": true,
                  "from": {"data": "countrySeries"},
                  "encode": {
                    "update": {
                      "opacity": {"value": 1},
                      "strokeWidth": {
                        "signal": "datum.Country==country1||datum.Country==country2?lineSelectedStrokeWidth:lineStrokeWidth"
                      },
                      "stroke": {
                        "signal": "datum.Country==country1?selected1Color:datum.Country==country2?selected2Color:lineColor"
                      },
                      "defined": {"signal": "true"},
                      "x": {
                        "scale": "scaleX",
                        "signal": "datum.Point==1?datum.Total:datum.Point==2?datum.Value:null"
                      },
                      "y": {"scale": "scaleYBranches", "signal": "datum.Point"}
                    }
                  }
                },
                {
                  "name": "stripe",
                  "type": "rect",
                  "interactive": true,
                  "from": {"data": "countrySeries"},
                  "encode": {
                    "update": {
                      "opacity": {"value": 1},
                      "strokeWidth": {
                        "signal": "datum.Country==country1||datum.Country==country2?lineSelectedStrokeWidth:lineStrokeWidth"
                      },
                      "stroke": {
                        "signal": "datum.Country==country1?selected1Color:datum.Country==country2?selected2Color:lineColor"
                      },
                      "xc": {"scale": "scaleX", "signal": "datum.Total"},
                      "yc": {"scale": "scaleYTotal", "signal": "1"},
                      "height": {"signal": "height"}
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
