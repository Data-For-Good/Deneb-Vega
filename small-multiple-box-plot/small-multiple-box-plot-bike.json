{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Box Plot Small Multiples",
  "height": 200,
  "width": 250,
  "padding": 5,
  "config": {
    "axisBand": {"bandPosition": 1, "tickExtra": true, "tickOffset": 0}
  },
  "signals": [
    {"name": "gridColumns", "value": 3},
    {"name": "gridPadding", "value": 25},
    {"name": "boxWidth", "value": 50},
    {"name": "lineColor", "value": "gray"},
    {"name": "axeLabelColor", "value": "#AAAAAA"},
    {"name": "axeTickColor", "value": "#CCCCCC"},
    {"name": "boxColor", "value": "#5e6cd5"}
  ],
  "data": [
    {
      "name": "dataset-csv",
      "url": "https://github.com/avatorl/Deneb-Vega/blob/main/small-multiples-box-plot/data-bike-box-plot.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","},
      "transform": [
        {
          "type": "collect",
          "sort": {"field": ["location"], "order": ["ascending"]}
        }
      ]
    },
    {"name": "dataset", "source": "dataset-csv"}
  ],
  "scales": [
    {
      "name": "scaleX",
      "type": "band",
      "range": "width",
      "domain": {"data": "dataset", "field": "year", "sort": true}
    },
    {
      "name": "scaleY",
      "type": "linear",
      "range": "height",
      "round": true,
      "domain": {"data": "dataset", "field": "max"},
      "domainMin": 0,
      "zero": true,
      "nice": true
    }
  ],
  "marks": [
    {
      "type": "group",
      "layout": {
        "align": "all",
        "bounds": "full",
        "columns": {"signal": "gridColumns"},
        "padding": {"signal": "gridPadding"}
      },
      "marks": [
        {
          "type": "group",
          "from": {
            "facet": {
              "name": "facet-locations",
              "data": "dataset",
              "groupby": "location"
            }
          },
          "title": {
            "text": {"signal": "parent[\"location\"]"},
            "anchor": "start",
            "font": {"value": "Tahoma"},
            "fontSize": {"value": 16},
            "fontWeight": "lighter",
            "dy": 10
          },
          "axes": [
            {
              "orient": "left",
              "scale": "scaleY",
              "tickCount": 5,
              "domain": false,
              "tickColor": {"signal": "axeTickColor"},
              "labelColor": {"signal": "axeLabelColor"}
            },
            {
              "orient": "bottom",
              "offset": {"signal": "height+5"},
              "ticks": false,
              "domain": false,
              "scale": "scaleX",
              "tickColor": {"signal": "axeTickColor"},
              "labelColor": {"signal": "axeLabelColor"}
            }
          ],
          "marks": [
            {
              "type": "group",
              "from": {
                "facet": {
                  "data": "facet-locations",
                  "name": "year",
                  "groupby": "year"
                }
              },
              "encode": {
                "enter": {
                  "xc": {"scale": "scaleX", "field": "year", "band": 0.5},
                  "width": {"signal": "boxWidth"},
                  "height": {"signal": "height"}
                }
              },
              "marks": [
                {
                  "type": "rect",
                  "from": {"data": "year"},
                  "encode": {
                    "enter": {
                      "fill": {"signal": "lineColor"},
                      "width": {"value": 1}
                    },
                    "update": {
                      "xc": {"signal": "boxWidth / 2", "offset": -0.5},
                      "y": {"scale": "scaleY", "field": "min"},
                      "y2": {"scale": "scaleY", "field": "max"}
                    }
                  }
                },
                {
                  "type": "rect",
                  "from": {"data": "year"},
                  "encode": {
                    "enter": {
                      "fill": {"signal": "boxColor"},
                      "cornerRadius": {"value": 2}
                    },
                    "update": {
                      "xc": {"signal": "boxWidth / 2"},
                      "width": {"signal": "boxWidth / 2"},
                      "y": {"scale": "scaleY", "field": "25th"},
                      "y2": {"scale": "scaleY", "field": "75th"}
                    }
                  }
                },
                {
                  "type": "rect",
                  "from": {"data": "year"},
                  "encode": {
                    "enter": {
                      "fill": {"value": "#EEEEEE"},
                      "height": {"value": 2}
                    },
                    "update": {
                      "xc": {"signal": "boxWidth / 2"},
                      "width": {"signal": "boxWidth / 2"},
                      "y": {"scale": "scaleY", "field": "50th"}
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
