{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 600,
  "height": 600,
  "padding": 5,
  "signals": [],
  "data": [
    {
      "name": "dataset",
      "url": "https://dl.dropboxusercontent.com/s/3vn50z80xksjsf3/data.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "range": "width",
      "zero": false,
      "domain": {"data": "dataset", "field": "x"}
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": {"data": "dataset", "field": "y"}
    },
    {
      "name": "zscale",
      "type": "linear",
      "range": [10, 1],
      "domain": {"data": "dataset", "field": "w"}
    }
  ],
  "marks": [
    {
      "type": "trail",
      "zindex": 0,
      "from": {"data": "dataset"},
      "encode": {
        "enter": {"fill": {"value": "red"}},
        "update": {
          "x": {"scale": "xscale", "field": "x"},
          "y": {"scale": "yscale", "field": "y"},
          "size": {
            "scale": "zscale",
            "field": "w",
            "mult": {"signal": "7.8*2"}
          },
          "opacity": {"value": 1},
          "strokeWidth": {"value": 0},
          "strokeCap": {"value": "butt"}
        }
      }
    },
    {
      "type": "trail",
      "zinex": 2,
      "from": {"data": "dataset"},
      "encode": {
        "enter": {"fill": {"value": "white"}},
        "update": {
          "x": {"scale": "xscale", "field": "x"},
          "y": {"scale": "yscale", "field": "y"},
          "size": {
            "scale": "zscale",
            "field": "w",
            "mult": {"signal": "7.4*2"}
          },
          "opacity": {"value": 0.8},
          "strokeWidth": {"value": 2},
          "strokeJoin": {"value": "miter"}
        }
      }
    },
    {
      "type": "trail",
      "zinex": 2,
      "from": {"data": "dataset"},
      "encode": {
        "enter": {"fill": {"value": "black"}},
        "update": {
          "x": {"scale": "xscale", "field": "x"},
          "y": {"scale": "yscale", "field": "y"},
          "size": {"value": 1},
          "opacity": {"value": 0.8},
          "strokeWidth": {"value": 2},
          "strokeJoin": {"value": "miter"}
        }
      }
    }
  ]
}
