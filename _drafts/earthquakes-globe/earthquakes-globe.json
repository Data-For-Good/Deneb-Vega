{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "An interactive globe depicting earthquake locations and magnitudes.",
  "padding": 5,
  "width": 600,
  "height": 600,
  "autosize": "pad",
  "background": "#000022",
  "signals": [
    {
      "name": "Angle",
      "init": "0",
      "on": [{"events": "timer{200}", "update": "Angle==-180?180:Angle-2"}]
    }
  ],
  "data": [
    {"name": "sphere", "values": [{"type": "Sphere"}]},
    {
      "name": "world",
      "url": "data/world-110m.json",
      "format": {"type": "topojson", "feature": "countries"}
    },
    {
      "name": "earthquakes",
      "url": "https://wfs.geonet.org.nz/geonet/ows?service=WFS&version=1.0.0&request=GetFeature&typeName=geonet:quake_search_v1&maxFeatures=1000&outputFormat=csv&cql_filter=magnitude>3",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","},
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"],
          "as": ["x", "y"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "scale": 225,
      "type": "orthographic",
      "translate": {"signal": "[width/2, height/2]"},
      "rotate": [{"signal": "-Angle"}, 0, 0]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "earthquakes", "field": "magnitude"},
      "range": {"scheme": "yelloworangered"}
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {"data": "sphere"},
      "encode": {
        "update": {
          "fill": {"value": "#349AE2"},
          "fillOpacity": {"value": 1},
          "stroke": {"value": "blue"},
          "strokeWidth": {"value": 2},
          "strokeOpacity": {"value": 0.5}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "shape",
      "from": {"data": "world"},
      "encode": {
        "update": {
          "fill": {"value": "mintcream"},
          "fillOpacity": {"value": 1},
          "stroke": {"value": "black"},
          "strokeWidth": {"value": 0.1}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "symbol",
      "shape": "circle",
      "from": {"data": "earthquakes"},
      "encode": {
        "update": {
          "xc": {"signal": "datum.x"},
          "yc": {"signal": "datum.y"},
          "strokeOpacity": {"value": 1},
          "opacity": {"value": 0.5},
          "fill": {"scale": "color", "field": "magnitude"},
          "stroke": {"scale": "color", "field": "magnitude"},
          "strokeWidth": {"value": 1},
          "size": {
            "signal": "(abs(Angle)<=90?datum.longitude>=(Angle-90)&&datum.longitude<=(Angle+90)?1:0:Angle<-90?datum.longitude>(Angle-90+360)||datum.longitude<(Angle+90)?1:0:Angle>90?datum.longitude>(Angle-90)||datum.longitude<(Angle-180-90)?1:0:0)*exp(datum.magnitude)/4"
          }
        }
      }
    }
  ]
}
