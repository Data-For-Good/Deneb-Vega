{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic scatter plot example depicting automobile statistics.",
  "width": 900,
  "height": 900,
  "padding": 5,
  "data": [
    {
      "name": "dataset-csv",
      "url": "https://dl.dropboxusercontent.com/s/nt73czm72w36z3o/data1.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    },
    {
      "name": "dataset",
      "source": "dataset-csv",
      "transform": [{"type": "collect", "sort": {"field": "angle"}}]
    }
  ],
  "signals": [{"name": "radius", "update": "450"}],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "dataset", "field": "part"},
      "range": {"scheme": "category20"}
    }
  ],
  "axes": [],
  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "dataset"},
      "encode": {
        "update": {
          "x": {"signal": "radius + radius*datum.dx"},
          "y": {"signal": "radius + radius*datum.dy"},
          "size": {"signal": "pow(datum.duration,0.99)*15"},
          "shape": {"value": "circle"},
          "strokeWidth": {"value": 0.5},
          "opacity": {"value": 0.5},
          "stroke": {"scale": "color", "field": "part"},
          "fill": {"scale": "color", "field": "part"},
          "fillOpacity": {"value": 0.2}
        }
      }
    }
  ],
  "config": {}
}
