{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Population Pyramid",
  "usermeta": {
    "Author": "Andrzej Leszkiewicz",
    "License": "CC BY 4.0 (Share and Adapt with Attribution)",
    "Github": "https://github.com/avatorl/Deneb-Vega/",
    "Original Idea Author": "Jorge Camoes",
    "Original Idea URL": ""
  },
  "width": 600,
  "height": 600,
  "padding": 20,
  "config": {
    "background": "black",
    "axis": {
      "titleFont": "Tahoma",
      "titleFontSize": 14,
      "labelFont": "Tahoma",
      "labelFontSize": 13,
      "labelPadding": 5,
      "labels": true,
      "ticks": true,
      "domain": false
    }
  },
  "signals": [
    {"name": "colorMain", "value": "#E65B15"},
    {
      "name": "year",
      "init": "19500",
      "on": [
        {
          "events": {"type": "timer", "throttle": 100},
          "update": "(year>=19500&&year<=19509)?year+1:year<21010?year+10:year<=21018?year+1:19500"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "dataset-csv",
      "url": "https://raw.githubusercontent.com/avatorl/Deneb-Vega/main/population-pyramid/Qatar1950-2100Population.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","}
    },
    {"name": "dataset", "source": "dataset-csv"},
    {
      "name": "data-max",
      "source": "dataset",
      "transform": [
        {"type": "aggregate", "fields": ["Max"], "ops": ["max"], "as": ["max"]}
      ]
    },
    {
      "name": "data-min",
      "source": "data-max",
      "transform": [{"type": "formula", "expr": "-datum.max", "as": "max"}]
    },
    {"name": "data-range", "source": ["data-max", "data-min"]}
  ],
  "scales": [
    {
      "name": "scaleY",
      "type": "point",
      "range": "height",
      "domain": {"data": "dataset", "field": "AgeGrp"},
      "reverse": true
    },
    {
      "name": "scaleX",
      "type": "linear",
      "range": "width",
      "domain": {"data": "data-range", "field": "max"}
    },
    {
      "name": "scaleColor",
      "type": "linear",
      "range": {"scheme": "oranges"},
      "domain": {"data": "dataset", "field": "Year", "sort": true},
      "reverse": true
    }
  ],
  "axes": [
    {
      "orient": "left",
      "scale": "scaleY",
      "title": "Age Group",
      "titleColor": {"signal": "colorMain"},
      "labelColor": {"signal": "colorMain"},
      "tickColor": {"signal": "colorMain"},
      "encode": {
        "labels": {
          "update": {
            "text": {
              "signal": "(ceil(datum.value/10)==datum.value/10)?(datum.label+(datum.value==100?'+':'')):''"
            }
          }
        },
        "ticks": {
          "update": {
            "strokeWidth": {
              "signal": "(ceil(datum.value/10)==datum.value/10)?'1':0.3"
            }
          }
        }
      }
    },
    {
      "orient": "right",
      "scale": "scaleY",
      "title": "Age Group",
      "titleColor": {"signal": "colorMain"},
      "labelColor": {"signal": "colorMain"},
      "tickColor": {"signal": "colorMain"},
      "encode": {
        "labels": {
          "update": {
            "text": {
              "signal": "(ceil(datum.value/10)==datum.value/10)?(datum.label+(datum.value==100?'+':'')):''"
            }
          }
        },
        "ticks": {
          "update": {
            "strokeWidth": {
              "signal": "(ceil(datum.value/10)==datum.value/10)?'1':0.3"
            }
          }
        }
      }
    },
    {
      "orient": "bottom",
      "scale": "scaleX",
      "title": "% of Population",
      "titleColor": {"signal": "colorMain"},
      "labelColor": {"signal": "colorMain"},
      "tickColor": {"signal": "colorMain"},
      "encode": {
        "labels": {"update": {"text": {"signal": "abs(datum.value)+'%'"}}}
      }
    }
  ],
  "legends": [
    {
      "type": "gradient",
      "fill": "scaleColor",
      "orient": "left",
      "title": "Year",
      "titleColor": {"signal": "colorMain"},
      "titleFont": "Tahoma",
      "titleFontSize": 14,
      "titleAlign": "center",
      "offset": 10,
      "labelColor": {"signal": "colorMain"},
      "labelAlign": "center",
      "labelOffset": 10,
      "labelFontSize": 13,
      "format": ".4"
    }
  ],
  "title": {
    "anchor": "start",
    "fontSize": 18,
    "text": {"signal": "'Qatar Population Pyramid, 1950-2100'"},
    "color": {"signal": "colorMain"},
    "subtitle": " ",
    "subtitlePadding": 5
  },
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {"name": "series", "data": "dataset", "groupby": "Year"}
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "scaleX", "signal": "datum.Female"},
              "y": {"scale": "scaleY", "field": "AgeGrp"},
              "stroke": {"scale": "scaleColor", "field": "Year"},
              "strokeWidth": {"value": 0.5}
            },
            "update": {
              "interpolate": {"signal": "'linear'"},
              "strokeOpacity": {"value": 1}
            },
            "hover": {"strokeOpacity": {"value": 0.5}}
          }
        },
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "scaleX", "signal": "-datum.Male"},
              "y": {"scale": "scaleY", "field": "AgeGrp"},
              "stroke": {"scale": "scaleColor", "field": "Year"},
              "strokeWidth": {"value": 0.5}
            },
            "update": {
              "interpolate": {"signal": "'linear'"},
              "strokeOpacity": {"value": 1}
            },
            "hover": {"strokeOpacity": {"value": 0.5}}
          }
        }
      ]
    }
  ]
}
